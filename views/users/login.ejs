<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
    <div class="col-6 offset-3">
        <br>
        <h1>Log in on GlobeStay</h1>
        <br>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input 
                name = "username" 
                id="username"
                type="text" class="form-control" 
                required
                >
            </div>


            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input 
                name = "password" 
                id="password"
                type="password" 
                class="form-control" 
                required
                >
            </div>    
            <br>
            <button class="btn btn-dark" style="height: 45px; width: 100px;">Log in</button>   

        </form>
    </div>    
</div>    