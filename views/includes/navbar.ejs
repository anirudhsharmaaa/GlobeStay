<style>
.Explore {
  width: 10em;
  position: relative;
  height: 3em;
  border: 3px ridge #ff385c;
  outline: none;
  background-color: transparent;
  color: black;
  transition: 1s;
  border-radius: 0.3em;
  font-size: 16px;
  font-weight: bold;
  cursor: pointer;
}

.Explore::after {
  content: "";
  position: absolute;
  top: -10px;
  left: 3%;
  width: 95%;
  height: 40%;
  background-color: white;
  transition: 0.5s;
  transform-origin: center;
}

.Explore::before {
  content: "";
  transform-origin: center;
  position: absolute;
  top: 80%;
  left: 3%;
  width: 95%;
  height: 40%;
  background-color: white;
  transition: 0.5s;
}

.Explore:hover::before, button:hover::after {
  transform: scale(0)
}

.Explore:hover {
  box-shadow: inset 0px 0px 25px #ff385c;
}
</style>